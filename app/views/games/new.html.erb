<h1>New Game</h1>

<div class = "letters">
  <% @letters.each do |letter| %>
    <div class="letter">
      <%= letter %>
    </div>
  <% end %>
</div>
<br>

<p>What is the longest word you find?</p>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <input type="hidden" name="grid" value="<%= @letters.join %>">

  <input type="text" name="word">

  <input type="submit">
</form>
